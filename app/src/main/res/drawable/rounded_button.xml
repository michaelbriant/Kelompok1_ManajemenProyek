<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Warna latar belakang tombol -->
    <solid android:color="#2196F3" /> <!-- Biru -->

    <!-- Sudut membulat -->
    <corners android:radius="24dp" />

    <!-- Opsional: garis tepi -->
    <stroke
        android:width="1dp"
        android:color="#1976D2" />

    <!-- Opsional: padding dalam tombol -->
    <padding
        android:left="12dp"
        android:top="8dp"
        android:right="12dp"
        android:bottom="8dp" />
</shape>
